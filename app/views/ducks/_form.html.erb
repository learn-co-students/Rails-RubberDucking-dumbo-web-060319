<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error_message| %>
      <li>
        <%= error_message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @duck do |f| %>
  <li>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <li>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <li>
  <%= f.label :student_id %>
  <%= f.collection_select :student_id, Student.all, :id, :name %>
  </li>
  <%= f.submit %>
<% end %>
