<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
  <ul>
    <li>
      <%= error %>
    </li>
  </ul>
  <% end %>
<% end %>

<%= form_for @duck do |d| %>
  <%= d.label :name%>
  <%= d.text_field :name %>
  <%= d.label :description%>
  <%= d.text_field :description %>
  <%= d.label :student %>
  <%= d.collection_select :student_id, @student, :id, :name%>

  <%= d.submit %>
<% end %>
